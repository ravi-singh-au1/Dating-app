<h3>{{viewTitle}}</h3>

<form action="/user" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{user._id}}">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="Full Name" value="{{user.fullName}}">
        <div class="text-danger">
            {{user.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{user.email}}">
        <div class="text-danger">
            {{user.emailError}}</div>
    </div>
    <div class="form-group">
        <label>Pass</label>
        <input type="password" class="form-control" name="pass" placeholder="pass" value="{{user.pass}}">
        <div class="text-danger">
            {{user.pass}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{user.mobile}}">
        </div>
        <div class="form-group col-md-6">
            <label>City</label>
            <input type="text" class="form-control" name="city" placeholder="City" value="{{user.city}}">
        </div>

              <div class="col-md-4">
                  
                <img style="margin-top: 20px" src="{{user.imagePath}}" alt="" height="180px"
                    width="180px">


    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/user/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>